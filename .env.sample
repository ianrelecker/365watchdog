# Microsoft Graph API credentials
MS_CLIENT_ID=your_client_id
MS_CLIENT_SECRET=your_client_secret
MS_TENANT_ID=your_tenant_id

# Email settings (SMTP for Microsoft 365)
SMTP_SERVER=smtp.office365.com
SMTP_PORT=587
SMTP_USERNAME=your_email@example.com
SMTP_PASSWORD=your_email_password
SMTP_USE_TLS=True
ALERT_EMAIL_FROM=your_email@example.com
ALERT_EMAIL_TO=security@example.com

# Flask secret key
FLASK_SECRET_KEY=generate_a_secure_random_key

# Database settings
DB_PATH=/app/data/logs.db

# Log polling interval in minutes
LOG_POLLING_INTERVAL=2

# Log retention period in days
LOG_RETENTION_DAYS=30
